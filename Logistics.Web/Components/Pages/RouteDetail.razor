 @page "/routes/{RouteId:guid}"
    @rendermode InteractiveServer
    @using Logistics.Application.DTOs
    @using Logistics.Application.Services
    @inject RouteService RouteService
   
    <h3>Route Details</h3>
   
    @if (_route == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="card mb-3">
            <div class="card-header">
                Route #@_route.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">Status: <span class="badge bg-info text-dark">@_route.Status</span></h5>
                <p class="card-text">
                    <strong>Assigned Vehicle:</strong> @_route.AssignVehicle.LicensePlate (@_route.AssignVehicle.Type)
                </p>
                <p class="card-text">
                    <strong>For Order ID:</strong> <a href="/orders/@_route.OrderId">@_route.OrderId</a>
                </p>
            </div>
        </div>
   
        <h4>Stops</h4>
        <ul class="list-group">
            @foreach (var stop in _route.Stops)
            {
                <li class="list-group-item">
                    @stop.StreetAddress, @stop.City, @stop.PostalCode, @stop.Country
                </li>
            }
        </ul>
    }
   
    @code {
        [Parameter]
        public Guid RouteId { get; set; }
   
        private RouteDto? _route;
   
        protected override async Task OnInitializedAsync()
        {
            _route = await RouteService.GetRouteByIdAsync(RouteId);
        }
    }
